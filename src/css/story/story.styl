/* CUSTOM STORY STYLE */
body
    background-color: $bg-purple;
    color: $white;
    font-family: $sans;

#content 
    padding: 0 1rem;
    position: relative;

#coinPath-Container
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  pointer-events: none;
  z-index: 1;

.coinPath-path 
  fill none
  stroke $purple
  stroke-width 3

h1
    font-family: $sans-display;
    text-transform: uppercase;
    set-type-size(xxxxx-large, false);
    line-height: 1;
    font-weight: 300;
    max-width: 30rem;
    text-shadow: 0 0 20px $white;
    animation: flicker 10s linear infinite;

h1:hover 
    animation: flicker 10s linear infinite;

h2
    font-family: $sans-display;
    text-transform: uppercase;
    set-type-size(xxx-large, false);
    line-height: 1;
    font-weight: 300;
    text-align: center;
    padding: 6rem 0 0 0;
    max-width: $column-width;
    margin: 1rem auto;

h3
    font-family: $sans-display;
    text-transform: uppercase;
    font-weight: 500;
    color: $dark-purple;
    margin: 0 auto;

p 
    max-width: $column-width;
    margin 0 auto;
    padding: 1rem 0;

p.normal {
  font-weight: normal;
}
p.highlight {
  font-weight: bold;
}

.text_div{
  max-width: 700px;
  margin: 0 auto;
}

.text_div:last-of-type
  margin-bottom: 10rem;

.bold{
  font-weight: bold;
}

.title{
	font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	color: #434148;
	font-weight: bold;
}

.legend{
	font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	color: #434148;
	font-weight: bold;
}

.logo-artist
  animation: flicker2 8s linear infinite;

.logo-spotify
  animation: flicker2 12s linear infinite 0.5s;

.logo-apple
  animation: flicker 6s linear infinite 1s;

.logo-deezer
  animation: flicker 10s linear infinite 1.5s;

#container{
  position: relative;
}

#sections{
  max-width: 400px;
  margin: 0 auto;
  color: $dark-purple;
  position: relative;
  z-index: set-index('overlay');
}

#sections > div{
  background: white;
  opacity: .2;
  margin-bottom: 50vh;
  padding: 1rem;
  border-radius: 10px;
  border: 5px solid $purple;
  box-shadow: 0 0 20px $purple;
  z-index: set-index('overlay');
}
#sections > div:last-child{
  margin-bottom: 30px;
}
#sections > div.graph-scroll-active{
  opacity: 1;
}

#sections > .last-div
  height 40vh
  opacity 0
  pointer-events none

#sections > .last-div.graph-scroll-active
  opacity 0

#graph{
  max-width: $column-width;
  margin: 0 auto;
  position: -webkit-sticky;
  position: sticky;
  top: 100px;
  border: 5px solid $purple;
  border-radius: 10px;
  box-shadow: 0 0 20px $purple;
  background-color: $dark-purple;
  z-index: 1;
}

.diagram-container 
  height 34rem;
  max-height 34rem

#dist_text, #artist_text, #streamers_text
  fill: $white;
  font-family: $poppins
  text-transform: uppercase;
  font-weight: 500;
  font-size: 14px;

.container-1 #graph
  height 30rem;
  max-height 30rem

.axis-label
    fill: $white;
    text-transform: uppercase;
    font-family: $sans-display;
    font-weight: 500;
    font-size: 14px;

.tick line
    stroke: $white;
    opacity: 0.25;

.tick text 
    font-size: 14px;

.domain
    display: none;   

#Premium 
    fill: $green;
    opacity: 0.90;
    filter: drop-shadow(0 0 10px $green);

#Freemium
    fill: $white;
    opacity: 0.90;
    filter: drop-shadow(0 0 10px $white);

.legend-1
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 2rem 0 0 75px;

.legend-1 p    
    font-family: $poppins;
    text-transform: uppercase;
    font-weight: 500;
    font-size: 14px;
    color: $white;
    margin: 0;
    padding: 0 1rem 0 0;

.preLegend::before
    display: inline-block;
    width:12px;
    height:12px;
    content: '';
    background-color: $green;
    margin: 0 4px;
    box-shadow: 0 0 10px $green;

.freeLegend::before
    display: inline-block;
    width:12px;
    height:12px;
    content: '';
    background-color: $white;
    margin: 0 4px;
    box-shadow: 0 0 10px $white;

circle{
  fill: steelblue;
}

.mono{
  font-family: monospace;
}

/*svg{
  background-color: #efefef;
}*/

.container-2 #graph
  display: flex;
  flex-direction: column;

.container-2 #graph .legend
  padding: 1rem 1.5rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  order: 2;
  flex-wrap: wrap;

.legend-block
  display: flex;
  flex-direction: row;
  width: 33.33%;
  align-items: center;
  justify-content: center;
  opacity: 0;
  padding: 0.5rem;

.legend-block p 
  margin: 0;
  padding: 0;
  width: 33.33%;
  color: $white;
  font-family: $poppins;
  text-transform: uppercase;
  font-size: 12px;
  font-weight: 500;
  +mq('bp-3')
    font-size: 14px

.legend-circle
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-image: url("../assets/images/dollar_sign.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  margin-right: 0.5rem;
  +mq('bp-3')
    width: 25px;
    height: 25px;

.legend-circle.other
  background-color: $white;
  box-shadow: 0 0 10px $white;

.legend-circle.artist
  background-color: $green;
  box-shadow: 0 0 10px $green;

.legend-circle.dist
  background-color: $blue;
  box-shadow: 0 0 10px $blue;

#dsp_share
  fill: $red;

#other_tracks
  fill: $white;

#distributor_share
  fill: $blue;

#artist_share 
  fill: $green;

.controls
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  max-width: none;
  width: 100%;
  margin: 0 auto;
  +mq('bp-3')
    flex-direction: row;
    max-width: 40rem;

.controls .sliderContainer
  width: 100%;
  height: 10px;
  padding: 2rem 1rem;
  margin-bottom: 2rem;
  +mq('bp-3')
    width: 50%;

.details
  display: flex;
  flex-direction: row;
  justify-content: space-between;

.details p
  margin: 0;
  padding: 0;

.details span
  font-weight: 700;

@keyframes flicker {
	0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100% {
		//text-shadow: none;
    opacity: .99;
		
	}
	20%, 21.999%, 63%, 63.999%, 65%, 69.999% {
		opacity: 0.4;
	
    }
}

@keyframes flicker2 {
	0%, 10.999%, 27%, 59.999%, 62%, 67.999%, 76%, 100% {
		//text-shadow: none;
    opacity: .99;
		
	}
	17%, 20.999%, 64%, 65.999%, 67%, 72.999% {
		opacity: 0.4;
	
    }
}
