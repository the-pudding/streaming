/* CUSTOM STORY STYLE */
body
	overflow-x hidden
	background-color $bg-purple
	color $white
	font-family $sans

#content
	position relative
	padding 0 1rem

#coinPath-Container
	position absolute
	top 0
	left 0
	z-index 0
	width 100%
	pointer-events none

.coinPath-path
	fill none
	stroke $purple
	stroke-width 3

.coinImg
	position absolute
	width 60px
	height 60px
	opacity 0
	animation none

h1
	text-transform uppercase
	font-family $sans-display
	set-type-size(xxxxx-large, false)
	max-width 30rem
	text-shadow 0 0 20px $white
	font-weight 300
	line-height 1
	animation flicker 10s linear infinite

h1:hover
	animation flicker 10s linear infinite

#coinSpan
	padding 0 0.5rem
	color $bg-purple
	opacity 0

.redSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $red
	box-decoration-break clone
	font-weight bold

.greenSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $green
	box-decoration-break clone
	font-weight bold

.purpleSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $purple
	box-decoration-break clone
	color $white
	font-weight bold

.blueSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $blue
	box-decoration-break clone
	font-weight bold

.whiteSpan
	padding 0.25rem 0.75rem
	border 1px solid rgba($purple, 0.25)
	border-radius 1rem
	background-color $white
	box-decoration-break clone
	font-weight bold

// #dist_diag, .pudding-chart
// opacity: 0;
h2
	text-transform uppercase
	font-family $sans-display
	set-type-size(xxx-large, false)
	margin 1rem auto
	padding 6rem 0 0 0
	max-width $column-width
	text-align center
	font-weight 300
	line-height 1

h3
	margin 0 auto
	color $dark-purple
	text-transform uppercase
	font-weight 500
	font-size 18px
	font-family $sans-display

p
	margin 0 auto
	padding 1rem 0
	max-width $column-width

p.normal
	font-weight normal

p.highlight
	font-weight bold

.text_div
	margin 0 auto
	max-width 700px

.text_div:last-of-type
	margin-bottom 10rem

.bold
	font-weight bold

.title
	color #434148
	font-weight bold
	font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

.legend
	color #434148
	font-weight bold
	font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

#container
	position relative

#sections
	position relative
	z-index set-index('overlay')
	margin 0 auto
	max-width 330px
	color $dark-purple

	+mq('bp-3')
		max-width 400px

#sections > div
	z-index set-index('overlay')
	margin-bottom 600px
	padding 1rem
	border 5px solid $purple
	border-radius 10px
	background white
	box-shadow 0 0 20px $purple
	opacity 0.2

#sections > div:last-child
	margin-bottom 30px

#sections > div.graph-scroll-active
	opacity 1

#sections > .last-div
	height 40vh
	opacity 0
	pointer-events none

#sections > .last-div.graph-scroll-active
	opacity 0

#graph
	position -webkit-sticky
	position sticky
	top 6rem
	z-index 1
	margin 0 auto
	max-width $column-width
	border 5px solid $purple
	border-radius 10px
	background-color $dark-purple
	box-shadow 0 0 20px $purple

.flickerClass
	border 5px solid $purple
	box-shadow 0 0 20px $purple
	animation flickerBorder 6s linear 3 1s

.diagram-container
	max-height 34rem
	height 34rem

#dist_text, #artist_text, #streamers_text, #freemium_text, #premium_text
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $poppins
	fill $white

#premium_num, #freemium_num
	text-transform uppercase
	font-weight 700
	font-size 16px
	font-family $poppins
	fill $white

	+mq('bp-3')
		font-size 20px

#premium_text, #premium_num
	fill $green

.container-1 #graph
	max-height 30rem
	height 30rem

.axis-label
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $sans-display
	fill $white

.tick line
	opacity 0.25
	stroke $white

.tick text
	font-size 14px

.domain
	display none

.circle-premium
	filter drop-shadow(0 0 2px $green)
	fill $green

.circle-freemium
	filter drop-shadow(0 0 2px $white)
	fill $white

.legend-1
	display flex
	flex-direction row
	justify-content start
	padding 2rem 0 0 75px

.legend-1 p
	margin 0
	padding 0 1rem 0 0
	color $white
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $poppins

.preLegend::before
	display inline-block
	margin 0 4px
	width 12px
	height 12px
	background-color $green
	box-shadow 0 0 10px $green
	content ''

.freeLegend::before
	display inline-block
	margin 0 4px
	width 12px
	height 12px
	background-color $white
	box-shadow 0 0 10px $white
	content ''

circle
	fill steelblue

.mono
	font-family monospace

/* svg{
  background-color: #efefef;
} */
.container-2 #graph
	display flex
	flex-direction column

.container-2 #graph .legend
	display flex
	flex-direction row
	order 2
	flex-wrap wrap
	justify-content space-between
	padding 1rem 1.5rem

.legend-block
	display flex
	flex-direction row
	justify-content center
	align-items center
	padding 0.5rem
	width 33.33%
	opacity 0

.legend-block p
	margin 0
	padding 0
	width 33.33%
	color $white
	text-transform uppercase
	font-weight 500
	font-size 12px
	font-family $poppins

	+mq('bp-3')
		font-size 14px

.legend-circle
	margin-right 0.5rem
	width 20px
	height 20px
	border-radius 50%
	background-image url('/assets/images/dollar_sign.png')
	background-position center
	background-size contain
	background-repeat no-repeat

	+mq('bp-3')
		width 25px
		height 25px

.legend-circle.other
	background-color $white
	box-shadow 0 0 10px $white

.legend-circle.artist
	background-color $green
	box-shadow 0 0 10px $green

.legend-circle.dist
	background-color $blue
	box-shadow 0 0 10px $blue

#dsp_share
	fill $red

#other_tracks
	fill $white

#distributor_share
	fill $blue

#artist_share
	fill $green

.controls
	position fixed
	bottom -20rem
	left 0
	z-index 999
	display flex
	flex-direction row
	flex-wrap wrap
	margin 0 auto
	padding 1rem 2rem
	max-width none
	width 100%
	height 14rem
	background-color rgba($dark-purple, 0.95)
	box-shadow 0 4px 10px $dark-purple

	+mq('bp-5')
		height 12rem

	+mq('bp-6')
		height 8.5rem

.controls .sliderContainer
	margin-bottom 0.5rem
	padding 2rem 1.5rem
	width 50%
	height 10px

	+mq('bp-6')
		width 25%

.details
	display flex
	flex-direction row
	justify-content space-between

.sliderContainer label
	margin 0
	padding 0
	font-size 14px

	+mq('bp-3')
		font-size 16px

	+mq('bp-5')
		font-size 18px

.details span
	font-weight 700

#DSPrevenue .noUi-handle
	animation shake 1s
	animation-play-state running
	animation-iteration-count infinite

@keyframes flicker
	0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100%
		opacity 0.99

	20%, 21.999%, 63%, 63.999%, 65%, 69.999%
		opacity 0.4

@keyframes flickerBorder
	0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100%
		border-color rgba($purple, 0.99)
		box-shadow 0 0 20px #5552CF

	20%, 21.999%, 63%, 63.999%, 65%, 69.999%
		border-color rgba($purple, 0.4)
		box-shadow 0 0 0px #5552CF

@keyframes shake
	10%, 90%
		transform translate3d(-1px, 0, 0)

	20%, 80%
		transform translate3d(-1px, 0, 0)

	30%, 50%, 70%
		transform translate3d(-2px, 0, 0)

	40%, 60%
		transform translate3d(2px, 0, 0)

@keyframes spin
	100%
		transform rotate(360deg)
