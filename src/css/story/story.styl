/* CUSTOM STORY STYLE */
body
	overflow-x hidden
	background-color $bg-purple
	color $white
	font-family $sans

html
	//overflow-x hidden

#content
	position relative
	padding 0 1rem
	//overflow-x hidden

#story-Container
	position relative
	z-index 100

#coinPath-Container
	position absolute
	top 0
	left 0
	z-index 0
	width 100%
	pointer-events none
	opacity 0
	+mq('bp-4')
		opacity 100

.coinPath-path
	fill none
	stroke $purple
	stroke-width 3

.coinImg
	position absolute
	width 60px
	height 60px
	opacity 0
	animation none

h1
	text-transform uppercase
	font-family $sans-display
	set-type-size(xxxx-large, false)
	max-width 30rem
	text-shadow 0 0 20px $white
	font-weight 300
	line-height 1
	+mq('bp-4')
		set-type-size(xxxxx-large, false)

.redSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $red
	box-decoration-break clone
	font-weight bold

.greenSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $green
	box-decoration-break clone
	color #0b1832
	font-weight bold

.purpleSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $purple
	box-decoration-break clone
	color $white
	font-weight bold

.blueSpan
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $blue
	box-decoration-break clone
	font-weight bold

.whiteSpan
	padding 0.25rem 0.75rem
	border 1px solid rgba($purple, 0.25)
	border-radius 1rem
	background-color $white
	box-decoration-break clone
	font-weight bold
	color #0b1832

.whiteSpanBorderless
	padding 0.25rem 0.75rem
	border-radius 1rem
	background-color $white
	box-decoration-break clone
	font-weight bold
	color black

// #dist_diag, .pudding-chart
// opacity: 0;
h2
	text-transform uppercase
	font-family $sans-display
	set-type-size(xxx-large, false)
	margin 1rem auto
	padding 6rem 0 0 0
	max-width $column-width
	text-align center
	font-weight 300
	line-height 1

h3
	margin 0 auto
	color $dark-purple
	text-transform uppercase
	font-weight 700
	font-size 18px
	font-family $sans-display

p
	margin 0 auto
	padding 1rem 1rem
	max-width $column-width

p.normal
	font-weight normal

p.highlight
	font-weight bold

.text_div
	margin 0 auto
	max-width 700px

.text_div:last-of-type
	margin-bottom 10rem

.intro-icons
	max-width 20rem
	margin 0 auto 1rem auto
	display flex
	flex-direction row
	justify-content center

.intro-icons img
	width 4rem
	height 4rem
	margin 0.5rem

.intro-artist
	animation flicker 10s linear infinite

.intro-note
	animation flicker 10s linear infinite
	animation-delay 2.5s

.intro-dollar
	animation flicker 10s linear infinite
	animation-delay 5s

.bold
	font-weight bold

.title
	color #434148
	font-weight bold
	font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

.legend
	color #434148
	font-weight bold
	font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

#container
	position relative
	display block
	max-width 70rem
	margin 0 auto
	+mq('bp-7')
		display flex
		flex-direction row
		margin 2rem auto 0 auto

#sections
	position relative
	order 1
	z-index set-index('overlay')
	margin 0 auto
	max-width 25rem
	width 100%
	color $dark-purple
	+mq('bp-7')
		margin 0 2rem

#sections > div
	z-index set-index('overlay')
	margin 0 0 40rem 0
	padding 2rem
	border 5px solid $purple
	border-radius 10px
	background white
	box-shadow 0 0 20px $purple
	opacity 0.2
	+mq('bp-7')
		margin 20rem 0 40rem 0

#sections > div p
	padding 0

#sections > div:last-child
	margin-bottom 30px

#sections > div.graph-scroll-active
	opacity 1

#sections > .last-div
	height 40vh
	opacity 0
	pointer-events none

#sections > .last-div.graph-scroll-active
	opacity 0

#graph
	position -webkit-sticky
	position sticky
	order 2
	top 6rem
	z-index 1
	margin 0 auto
	max-width $column-width
	border-radius 0
	background-color $bg-purple
	+mq('bp-7')
		width calc(100% - 25rem)

.flickerClass
	border 5px solid $purple
	box-shadow 0 0 20px $purple
	animation flickerBorder 6s linear 3 1s

.diagram-container
	max-height 34rem
	height 34rem

#dist_text, #artist_text, #streamers_text, #freemium_text, #premium_text
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $poppins
	fill $white

#premium_num, #freemium_num, #revenue_text, #user_text
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $poppins
	fill $white

	+mq('bp-3')
		font-size 14px

#premium_text, #premium_num
	fill $green

#premium_num, #freemium_num
	font-weight 700
	font-size 24px

.fArrowLine, .pArrowLine 
	stroke white
	stroke-width 2

.fArrow, .pArrow
	fill white

.container-1 #graph
	max-height 30rem
	height 30rem

.axis-label
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $sans-display
	fill $white

.tick line
	opacity 0.25
	stroke $white

.tick text
	font-size 14px

.domain
	display none

.bigCircle
	stroke $purple
	stroke-width 2px
	fill rgba($white, 0.1)
	stroke-dasharray 5,5
	//animation dash 3s infinite

.circle-premium
	filter drop-shadow(0 0 1px $green)
	fill $green

.circle-freemium
	filter drop-shadow(0 0 1px $white)
	fill $white

.legend-1
	display flex
	flex-direction row
	justify-content start
	padding 2rem 0 0 75px

.legend-1 p
	margin 0
	padding 0 1rem 0 0
	color $white
	text-transform uppercase
	font-weight 500
	font-size 14px
	font-family $poppins

.preLegend::before
	display inline-block
	margin 0 4px
	width 12px
	height 12px
	background-color $green
	box-shadow 0 0 10px $green
	content ''

.freeLegend::before
	display inline-block
	margin 0 4px
	width 12px
	height 12px
	background-color $white
	box-shadow 0 0 10px $white
	content ''

circle
	fill steelblue

.mono
	font-family monospace

/* svg{
  background-color: #efefef;
} */
.container-2 #graph
	display flex
	flex-direction column

.container-2 #graph .legend
	display flex
	flex-direction row
	order 2
	flex-wrap wrap
	justify-content space-between
	padding 1rem 1.5rem

.legend-block
	display flex
	flex-direction row
	justify-content center
	align-items center
	padding 0.5rem
	width 33.33%
	opacity 0

.legend-block p
	margin 0
	padding 0
	width 33.33%
	color $white
	text-transform uppercase
	font-weight 500
	font-size 12px
	font-family $poppins

	+mq('bp-3')
		font-size 14px

.legend-circle
	margin-right 0.5rem
	width 20px
	height 20px
	border-radius 50%
	background-image url('https://pudding.cool/2022/05/streaming/assets/images/dollar_sign.png')
	background-position center
	background-size contain
	background-repeat no-repeat

	+mq('bp-3')
		width 25px
		height 25px

.legend-circle.other
	background-color $white
	box-shadow 0 0 10px $white

.legend-circle.artist
	background-color $green
	box-shadow 0 0 10px $green

.legend-circle.dist
	background-color $blue
	box-shadow 0 0 10px $blue

#dsp_share
	fill $red

#other_tracks
	fill $white

#distributor_share
	fill $blue

#artist_share
	fill $green

.controls
	position fixed
	bottom -20rem
	left 0
	z-index 999
	display flex
	flex-direction row
	flex-wrap wrap
	margin 0 auto
	padding 1rem 2rem
	max-width none
	width 100%
	height 14rem
	background-color rgba($dark-purple, 0.95)
	box-shadow 0 4px 10px $dark-purple

	+mq('bp-5')
		height 12rem

	+mq('bp-6')
		height 8.5rem

.controls .sliderContainer
	margin-bottom 0.5rem
	padding 2rem 1.5rem
	width 50%
	height 10px

	+mq('bp-6')
		width 25%

.details
	display flex
	flex-direction row
	justify-content space-between

.sliderContainer label
	margin 0
	padding 0
	font-size 14px

	+mq('bp-3')
		font-size 16px

	+mq('bp-5')
		font-size 18px

.details span
	font-weight 700

#DSPrevenue .noUi-handle
	// animation shake 1s
	// animation-play-state running
	// animation-iteration-count infinite


ul
	max-width 40rem
	margin 0 auto
	padding 1rem
	list-style-type disc

li 
	font-size 16px
	line-height 1.65

	+mq('bp-3')
		font-size 18px

#notes p
	font-size 14px
	+mq('bp-3')
		font-size 16px

#subhed-5
	font-size 24px
	padding 4rem 0 0 0

#notes ol 
	max-width 40rem
	margin 0 auto
	padding 1rem 4rem
	font-size 16px

#notes li
	padding 0.5rem 0
	font-size 14px
	+mq('bp-3')
		font-size 16px

@keyframes flicker
	0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100%
		opacity 0.99

	20%, 21.999%, 63%, 63.999%, 65%, 69.999%
		opacity 0.4

@keyframes flickerBorder
	0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100%
		border-color rgba($purple, 0.99)
		box-shadow 0 0 20px #5552CF

	20%, 21.999%, 63%, 63.999%, 65%, 69.999%
		border-color rgba($purple, 0.4)
		box-shadow 0 0 0px #5552CF

@keyframes shake
	10%, 90%
		transform translate3d(-1px, 0, 0)

	20%, 80%
		transform translate3d(-1px, 0, 0)

	30%, 50%, 70%
		transform translate3d(-2px, 0, 0)

	40%, 60%
		transform translate3d(2px, 0, 0)

@keyframes spin
	100%
		transform rotate(360deg)

@keyframes dash
	0%
		stroke-dasharray 5, 5
		stroke-dashoffset 0%
	50%
		stroke-dasharray 5, 5
		stroke-dashoffset 100%
	100%
		stroke-dasharray 5, 5
		stroke-dashoffset 0%

